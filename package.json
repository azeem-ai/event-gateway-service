{
    "name": "event-gateway-service",
    "version": "1.0.0",
    "description": "Cloud-native backend to connect event source and rate-limited GraphQL target using AWS, Node.js, Terraform",
    "main": "index.js",
    "scripts": {
        "build": "tsc && tsc-alias",
        "watch": "tsc -w",
        "dev": "ts-node -r tsconfig-paths/register src/receiver/handler.ts",
        "start:receiver": "node -r tsconfig-paths/register dist/receiver/handler.js",
        "start:dispatcher": "node -r tsconfig-paths/register dist/dispatcher/handler.js",
        "lint": "eslint src --ext .js,.ts",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --write .",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "prepare": "husky install",
        "deploy": "echo 'Handled by GitHub Actions / Terraform'",
        "zip:receiver": "echo 'Packaging Receiver Lambda...' && mkdir -p infrastructure/lambda/receiver && cp dist/receiver/handler.js infrastructure/lambda/receiver/ && cp -r node_modules infrastructure/lambda/receiver/ && cd infrastructure/lambda/receiver && zip -r ../receiver.zip . && cd ../../../",
        "zip:dispatcher": "echo 'Packaging Dispatcher Lambda...' && mkdir -p infrastructure/lambda/dispatcher && cp dist/dispatcher/handler.js infrastructure/lambda/dispatcher/ && cp -r node_modules infrastructure/lambda/dispatcher/ && cd infrastructure/lambda/dispatcher && zip -r ../dispatcher.zip . && cd ../../../",
        "zip:all": "npm run build && npm run zip:receiver && npm run zip:dispatcher"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/*.test.ts"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1"
        }
    },
    "author": "Azeem Toor",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@types/aws-lambda": "^8.10.148",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.1",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "eslint": "^9.24.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-security": "^3.0.1",
        "globals": "^16.0.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.3.1",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.13",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.0",
        "typescript-eslint": "^8.29.0"
    },
    "lint-staged": {
        "**/*.{ts,js}": "eslint --fix"
    },
    "dependencies": {
        "@aws-sdk/client-sqs": "^3.782.0",
        "axios": "^1.8.4",
        "dotenv": "^16.4.7",
        "winston": "^3.17.0",
        "zod": "^3.24.2"
    }
}
