/* Visit https://aka.ms/tsconfig to read more about this file */
{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
        "@/*": ["*"] 
        },
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "rootDir": "src",
        "outDir": "build",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "build"]
}
